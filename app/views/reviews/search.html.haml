.search_box
  = form_with(url: search_reviews_path, local: true, method: :get, class: "search_form") do |f|
    = f.text_field :keyword, placeholder: "artist search", class: "search_input"
    = f.submit "search", class: "search_btn"
.contents
  - @reviews.each do |review|
    .content_post
      .review_title
        = review.title
      .artist_name
        = review.artist
      .image
        = link_to image_tag(src = review.image.url, size: '250x250'), review_path(review.id)
.paginate
  = paginate(@reviews)
        
      
    
